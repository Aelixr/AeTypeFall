// * The base tsconfig for typefall

{
    "compilerOptions": {
        "rootDir": "../projects/",
        "outDir": "../build/",

        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports":     true,           // Test this as an alternative to default imports
        "noFallthroughCasesInSwitch":       true,
        "noUnusedParameters":               true,
        "noImplicitReturns":                true,
        "strictNullChecks":                 true,
        "noImplicitThis":                   true,
        "removeComments":                   false,
        "noUnusedLocals":                   false,          // Better to lint with TSLint than to error
        "noEmitOnError":                    true,
        "noImplicitAny":                    true,
        "alwaysStrict":                     true,
        "sourceMap":                        false,          // Sourcemap support in AeTF 2.0
        "allowJs":                          false,
        "target":                           "es2015",          // ES2015:Compat; ES6:Next
        "noLib":                            true,

        // Debug:
        "listEmittedFiles":                 true,
        "traceResolution":                  true,
        "listFiles":                        true
    },

    "include": [
        "../projects/**/*.ts",
        "../definition/**/*.d.ts"
    ],

    "exclude": [
        "node_modules",
        "../node_modules",
        "../compiler/**/*.*",
        "../projects/_*/**/*.ts"
    ],

    // Test?
    "typeAcquisition": {
        "enable": false
    }
}
