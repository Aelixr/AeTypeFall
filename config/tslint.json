{
	"rules": {
		"adjacent-overload-signatures": true,
		"max-classes-per-file": [true, 1],
		"no-consecutive-blank-lines": false,
		"no-namespace": false,
		// "no-any": true, Re-enable once stubs are removed from definitions
		"prefer-conditional-expression": true,
		"prefer-const": true,
		"prefer-for-of": true,
		"prefer-readonly": true,
		"prefer-switch": true,
		"prefer-template": false,
		"space-within-parens": true,
		"interface-name": true,
		"no-invalid-template-strings": true,
		"whitespace": true,
		"no-irregular-whitespace": true,
		"no-redundant-jsdoc": true,
		"no-unnecessary-callback-wrapper": true,
		"no-trailing-whitespace": true,
		// "only-arrow-functions": true,
		"arrow-return-shorthand": true,
		"member-access": true,
		"member-ordering": [
			true, {
				"order": [
					"private-static-field",
					"protected-static-field",
					"public-static-field",

					"private-instance-field",
					"protected-static-field",
					"public-instance-field",

					"private-constructor",
					"public-constructor",

					"private-instance-method",
					"protected-instance-method",
					"public-instance-method"
				]
			}
		],
		"no-use-before-declare": true,
		"array-type":false,
		"no-arg": true,
		"no-console": true,
		"no-default-export": true,
		"no-empty-interface": true,
		"no-import-side-effect": true,
		"no-unsafe-any": true,
		"no-internal-module": true,
		"no-non-null-assertion": true,
		"no-var-keyword": true,
		"no-var-requires": true,
		"only-arrow-functions": [true, "allow-declarations"],
		"trailing-comma": [true, "esSpecCompliant"],
		"promise-function-async": true,
		"typedef": true,
		"unified-signatures": true,
		"no-unnecessary-qualifier": true,
		"ban-comma-operator": true,
		"no-duplicate-variable": true,
		"forin": false,
		"curly": [true, "as-needed"],
		"label-position": true,
		"no-construct": true,
		"no-conditional-assignment": true,
		"no-duplicate-super": true,
		"no-debugger": true,
		"no-duplicate-switch-case": true,
		"no-dynamic-delete": true,
		"no-empty": true,
		"no-eval": false,
		"no-floating-promises": true,
		"no-for-in-array": true,
		"no-implicit-dependencies": true,
		"no-inferred-empty-object-type": true,
		"no-invalid-this": false,
		"no-null-keyword": true,
		"no-misused-new": true,
		"no-object-literal-type-assertion": true,
		"no-string-throw": false, // TODO: Test this
		"no-sparse-arrays": true,
		"no-switch-case-fall-through": true,
		"no-this-assignment": true,
		"no-unnecessary-class": true,
		"no-unsafe-finally": true,
		"no-unused-expression": true,
		"no-unused-variable": true,
		
		"variable-name": [true, 
			"ban-keywords", 
			"check-format", 
			"allow-leading-underscore"
		],

		"prefer-object-spread": true,
		"triple-equals": true,
		"use-isnan": true,
		"switch-default": true,
		// * Do not remove; use this as a metric for maintainability
		"cyclomatic-complexity": true,
		// * Standard convention
		"eofline": true,
		"deprecation": true,
		"indent": [true, "tabs", 4],
		// Standard convention
		"max-line-length": [true, {"limit": 120, "ignore-pattern": "^import |^export {(.*?)}"}],
		"no-duplicate-imports": true,
		"no-require-imports": true,
		"class-name": true,
		"import-spacing": true,
		"interface-over-type-literal": true,
		"no-boolean-literal-compare": true,
		"new-parens": true,
		"one-variable-per-declaration": true,
		"return-undefined": true,
		"semicolon": true,
		"space-before-function-paren": false,
		"newline-per-chained-call": false,
		"newline-before-return": true,
		"no-parameter-properties": true,
		"no-inferrable-types": false
	}
}
